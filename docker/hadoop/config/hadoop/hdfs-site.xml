<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!-- Replication factor -->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
        <description>Number of replicas for each block (2 DataNodes)</description>
    </property>

    <!-- NameNode directories -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///opt/hadoop/dfs/name</value>
        <description>NameNode metadata directory</description>
    </property>

    <!-- DataNode directories -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///opt/hadoop/dfs/data</value>
        <description>DataNode data directory</description>
    </property>

    <!-- WebHDFS (REST API) -->
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
        <description>Enable WebHDFS REST API</description>
    </property>

    <!-- Permissions (disabled for development) -->
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
        <description>Disable HDFS permissions for easier development</description>
    </property>

    <!-- Block size (128MB default) -->
    <property>
        <name>dfs.blocksize</name>
        <value>134217728</value>
        <description>HDFS block size: 128MB</description>
    </property>

    <!-- NameNode HTTP address -->
    <property>
        <name>dfs.namenode.http-address</name>
        <value>0.0.0.0:9870</value>
        <description>NameNode Web UI address</description>
    </property>

    <!-- Disable hostname check for Docker -->
    <property>
        <name>dfs.namenode.datanode.registration.ip-hostname-check</name>
        <value>false</value>
        <description>Disable IP-hostname check for Docker containers</description>
    </property>

    <!-- Client use datanode hostname -->
    <property>
        <name>dfs.client.use.datanode.hostname</name>
        <value>true</value>
        <description>Use DataNode hostname instead of IP</description>
    </property>

    <!-- DataNode use hostname -->
    <property>
        <name>dfs.datanode.use.datanode.hostname</name>
        <value>true</value>
        <description>DataNode reports hostname instead of IP</description>
    </property>
</configuration>
